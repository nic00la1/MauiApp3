<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.View.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="8"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Login:" FontSize="Medium" />
            <Entry
                x:Name="loginBox"
                Placeholder="Nazwa użytkownika" Margin="0,0,0,16" />
            <Label
                Text="Password: " FontSize="Medium" />
            <Entry
                x:Name="passwordBox" IsPassword="True" Placeholder="Hasło użytkownika"/>

            <Button 
                Text="Zaloguj"
                Clicked="LoginMe" />

            <Label
                x:Name="errorText" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
